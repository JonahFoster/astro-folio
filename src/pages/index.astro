---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Steps from '~/components/widgets/Steps.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import { getPermalink } from '~/utils/permalinks';
import weddingheadshot from '../assets/images/weddingheadshot.jpg';
import smallBusinessImage from '../assets/images/jonah foster small business sites.webp';
import landingPageImage from '../assets/images/jonah foster landing page site.webp';
import webAppImage from '../assets/images/jonah foster web app.png';

const metadata = {
  title: 'Jonah Foster | Portfolio',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Home', href: '#' },
        { text: 'About', href: '#about' },
        { text: 'Resume', href: '#resume' },
        { text: 'Porfolio', href: '#porfolio' },
        { text: 'Github', href: 'https://github.com/JonahFoster' },
      ]}
      actions={[
        {
          text: 'Contact me',
          href: getPermalink('/contact#form'),
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero
    id="hero"
    title="Jonah Foster"
    tagline="Web Developer"
    actions={[{ variant: 'primary', text: 'Contact me', href: getPermalink('/contact#form') }]}
  >
    <Fragment slot="subtitle">
      I'm a Web Developer that truly loves building. <br /> With years of experience and a degree from
      the University of Florida, I come prepared for any project, whether it be creating a next generation web application
      or a landing page for your new product.
    </Fragment>
  </Hero>

  <!-- Content Widget **************** -->

  <Content
    id="about"
    columns={3}
    items={[
      {
        icon: 'tabler:brand-linkedin',
        callToAction: {
          target: '_blank',
          text: 'LinkedIn',
          href: 'https://www.linkedin.com/in/jonahfoster/',
        },
      },
      {
        icon: 'tabler:brand-github',
        callToAction: {
          target: '_blank',
          text: 'Github',
          href: 'https://github.com/JonahFoster',
        },
      },
      {
        icon: 'tabler:brand-twitter',
        callToAction: {
          target: '_blank',
          text: 'Twitter',
          href: 'https://twitter.com/thejonahfoster',
        },
      },
    ]}
    image={{
      src: weddingheadshot,
      alt: 'Colorful Image',
      loading: 'eager',
    }}
  >
    <Fragment slot="content">
      <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">About me</h2>
      <p>
        I am a web developer passionate about solving problems. Whether I'm learning new web technologies through
        Scrimba or working on my own projects, my goal is always to create digital experiences that are accessible and
        user-friendly. With each project, I strive to make the web a better space.
      </p>
      <br />
      <p>Away from the keyboard, I enjoy hiking the many trails in North Florida or reading while I sip coffee.</p>
      <br />
      <p>If you're curious to dive deeper into my work, you can follow me:</p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    id="resume"
    title="Work experience"
    items={[
      {
        title:
          'Freelance Web Developer <br /> <span class="font-normal">Upwork</span> <br /> <span class="text-sm font-normal">July 2024 - Present</span>',
        description: ` • Designed, developed, and managed websites for over 25 clients on Upwork with a variety of web platforms including 
WordPress, WebFlow, and Astro. <br /> • Implemented custom CMS systems to allow clients to manage content on custom coded sites without having to rely on an 
external developer. <br /> • Utilized Figma to create high fidelity design mockups, collaborating with clients to ensure alignment with all stakeholders.`,
        icon: 'tabler:briefcase',
      },
      {
        title:
          'React Engineer <br /> <span class="font-normal">Not All Talk</span> <br /> <span class="text-sm font-normal">January 2024 - July 2024</span>',
        description: `• Played a pivotal role in the early stages of a startup using AI to revolutionize accounting <br /> • Designed and implemented several user-facing features, with some going from idea to production in just one week. <br /> • Collaborated with the backend team to integrate user-facing elements with server-side logic`,
        icon: 'tabler:briefcase',
      },
      {
        title:
          'Full Stack Developer Intern <br /> <span class="font-normal">Vertex Med Solutions</span> <br /> <span class="text-sm font-normal">August 2023 - December 2023</span>',
        description: `• Developed a dynamic questionnaire score calculator for the Vertex360 Platform, ensuring a 100% assessment accuracy.
 <br /> • Ensured that community resources were accurately listed as active using JavaScript and the OpenAI API.
 <br /> • Gained hands on experience using React and Node.js in a production environment.`,
        icon: 'tabler:briefcase',
      },
      {
        title:
          'Web Intern <br /> <span class="font-normal">UF CPET</span> <br /> <span class="text-sm font-normal">January 2023 - April 2023</span>',
        description: `• Collaborated with the Primary Web Coordinator to update the website.
 <br /> • Created and published website content for CPET using Terminalfour in addition to HTML and CSS, ensuring that online material is up-to-date, accurate, and consistent with the organization's mission.
 <br /> • Conducted regular website audits and content reviews, identifying and fixing errors and inconsistencies on the website to 
ensure a seamless user experience`,
        icon: 'tabler:briefcase',
      },
    ]}
    classes={{ container: 'max-w-3xl' }}
  />

